<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">

        <fragment android:id="@+id/fragment_left"
            android:name="com.shpp.sv.fragments.LeftFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:gravity="center_vertical|center_horizontal"
            tools:layout="@layout/fragment_left"
            android:layout_weight="0.5"
            android:layout_margin="5dp" />
        <fragment android:id="@+id/fragment_right"
            android:name="com.shpp.sv.fragments.RightFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:gravity="center_vertical|center_horizontal"
            tools:layout="@layout/fragment_right"
            android:layout_weight="0.5"
            android:layout_margin="5dp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5">

        <fragment android:id="@+id/fragment_bottom"
            android:name="com.shpp.sv.fragments.BottomFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_span="2"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|center_horizontal"
            tools:layout="@layout/fragment_bottom"
            android:layout_margin="5dp" />
    </TableRow>
</TableLayout>